<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 검은색 바깥 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000" /> <!-- 검은색 테두리 -->
            <solid android:color="#ffffff" /> <!-- 내부 흰색 -->
        </shape>
    </item>


    <!-- 흰색 내부 영역 -->
    <item
        android:top="1dp"
        android:right="1dp"
        android:left="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- 흰색 내부 영역 -->
        </shape>
    </item>
</layer-list>
